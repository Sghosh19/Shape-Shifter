import React, { useState, useEffect } from 'react';
import { GameScore } from '@/entities/GameScore';

export default function StartScreen({ onStartGame, onShowHighScores, onShowSettings }) {
  const [highScore, setHighScore] = useState(0);
  const [isLoading, setIsLoading] = useState(true);

  useEffect(() => {
    const loadHighScore = async () => {
      try {
        const scores = await GameScore.list('-score', 1);
        if (scores.length > 0) {
          setHighScore(scores[0].score);
        }
      } catch (error) {
        console.error('Error loading high score:', error);
      }
      setIsLoading(false);
    };

    loadHighScore();
  }, []);

  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gradient-to-b from-gray-900 via-black to-purple-900 px-4 relative overflow-hidden">
      {/* Background effects */}
      <div className="absolute inset-0 opacity-30">
        <div className="absolute top-1/4 left-1/4 w-32 h-32 bg-cyan-400 rounded-full blur-3xl animate-pulse" />
        <div className="absolute top-3/4 right-1/4 w-24 h-24 bg-purple-400 rounded-full blur-2xl animate-pulse" style={{ animationDelay: '1s' }} />
        <div className="absolute top-1/2 left-1/2 w-20 h-20 bg-green-400 rounded-full blur-2xl animate-pulse" style={{ animationDelay: '2s' }} />
      </div>

      {/* Title */}
      <div className="text-center mb-12 z-10">
        <h1 className="text-6xl font-bold text-transparent bg-gradient-to-r from-cyan-400 via-purple-400 to-green-400 bg-clip-text mb-4 animate-pulse">
          Shape Shifter
        </h1>
        <p className="text-xl text-gray-300 max-w-md mx-auto leading-relaxed">
          Morph your orb to match the gates rushing toward you in this endless neon tunnel
        </p>
      </div>

      {/* High Score */}
      <div className="mb-8 z-10">
        <div className="bg-black bg-opacity-50 border border-cyan-400 rounded-lg px-6 py-3">
          <div className="text-center">
            <div className="text-sm text-gray-400 mb-1">High Score</div>
            <div className="text-2xl font-bold text-cyan-400">
              {isLoading ? '...' : highScore.toLocaleString()}
            </div>
          </div>
        </div>
      </div>

      {/* Menu Buttons */}
      <div className="space-y-4 w-full max-w-xs z-10">
        <button
          onClick={onStartGame}
          className="w-full bg-gradient-to-r from-cyan-500 to-blue-500 hover:from-cyan-600 hover:to-blue-600 
                     text-white font-bold py-4 px-8 rounded-lg text-xl transition-all duration-200 
                     transform hover:scale-105 shadow-lg hover:shadow-cyan-500/25"
        >
          ðŸš€ Play Game
 
